<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/default_titlebar_height"
    android:background="@color/bg_blue_dark"
    android:orientation="horizontal"
    android:weightSum="5" >

    <TextView
        android:id="@+id/list_function_bar_home"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_list_bar"
        android:gravity="center"
        android:text="@string/list_function_bar_home"
        android:textColor="@color/text_orange"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_function_bar_refresh"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_list_bar"
        android:gravity="center"
        android:text="@string/list_function_bar_refresh"
        android:textColor="@color/text_orange"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2" >

        <TextView
            android:id="@+id/list_function_bar_goto"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/bg_list_bar"
            android:gravity="center"
            android:text="@string/list_function_bar_goto"
            android:textColor="@color/text_orange"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/list_function_bar_page"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toLeftOf="@+id/list_function_bar_goto"
            android:maxLength="4"
            android:numeric="integer"
            android:singleLine="true"
            android:textColor="@color/gray_text"
            android:textSize="24sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/list_function_bar_next_page"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_list_bar"
        android:gravity="center"
        android:text="@string/list_function_bar_next_page"
        android:textColor="@color/text_orange"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>